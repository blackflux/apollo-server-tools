{
  "name": "apollo-server-tools",
  "version": "0.0.0-development",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/apollo-server-tools.git"
  },
  "author": "Lukas Siemon",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.7.4",
    "@babel/core": "7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "7.7.4",
    "@babel/register": "7.7.4",
    "@blackflux/eslint-plugin-rules": "1.3.17",
    "@blackflux/robo-config-plugin": "3.0.1",
    "apollo-server": "2.9.13",
    "babel-eslint": "10.0.3",
    "chai": "4.2.0",
    "coveralls": "3.0.9",
    "eslint": "6.7.2",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-json": "2.0.1",
    "eslint-plugin-markdown": "1.0.1",
    "eslint-plugin-mocha": "6.2.2",
    "graphql": "14.5.8",
    "js-gardener": "2.0.118",
    "node-tdd": "2.5.20",
    "nyc": "14.1.1",
    "request": "2.88.0",
    "request-promise": "4.2.5",
    "semantic-release": "15.13.31"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/apollo-server-tools/blob/master/LICENSE"
    }
  ],
  "description": "Helper for apollo-server",
  "keywords": [
    "graphql",
    "apollo",
    "apollo-server",
    "deprecation",
    "extract",
    "info",
    "helper",
    "sunset"
  ],
  "engines": {
    "node": ">= 10"
  },
  "nyc": {
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ],
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "yarn run clean && yarn run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "yarn run clean && yarn run gardener && yarn run test-simple",
    "docker": "docker run --net host -u`id -u`:`id -g` -v $(pwd):/user/project -v ~/.aws:/user/.aws -v ~/.npmrc:/user/.npmrc -w /user/project -it --entrypoint /bin/bash",
    "u": "yarn upgrade --latest --force",
    "i": "yarn install --frozen-lockfile",
    "t": "yarn test",
    "ts": "yarn run test-simple",
    "tsv": "yarn run test-simple --verbose",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "yarn run build-clean && npx semantic-release",
    "gardener": "node gardener"
  },
  "homepage": "https://github.com/blackflux/apollo-server-tools#readme",
  "bugs": {
    "url": "https://github.com/blackflux/apollo-server-tools/issues"
  },
  "peerDependencies": {
    "graphql": "^14.5.3"
  },
  "dependencies": {
    "graphql-extensions": "0.10.7",
    "json-stable-stringify": "1.0.1",
    "lodash.get": "4.4.2",
    "lodash.set": "4.3.2",
    "object-scan": "10.0.14",
    "smart-fs": "1.11.2"
  }
}
