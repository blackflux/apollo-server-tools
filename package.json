{
  "name": "apollo-server-tools",
  "version": "0.0.0-development",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/apollo-server-tools.git"
  },
  "author": "Lukas Siemon",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.13.0",
    "@babel/core": "7.13.8",
    "@babel/register": "7.13.8",
    "@blackflux/eslint-plugin-rules": "1.3.45",
    "@blackflux/robo-config-plugin": "4.1.3",
    "apollo-server": "2.21.1",
    "babel-eslint": "10.1.0",
    "babel-preset-latest-node": "5.4.0",
    "chai": "4.3.3",
    "coveralls": "3.1.0",
    "eslint": "7.21.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-markdown": "2.0.0",
    "eslint-plugin-mocha": "8.1.0",
    "graphql": "15.5.0",
    "js-gardener": "2.0.187",
    "node-tdd": "2.19.1",
    "nyc": "15.1.0",
    "request": "2.88.2",
    "request-promise": "4.2.6",
    "semantic-release": "17.4.1"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/apollo-server-tools/blob/master/LICENSE"
    }
  ],
  "description": "Helper for apollo-server",
  "keywords": [
    "graphql",
    "apollo",
    "apollo-server",
    "deprecation",
    "extract",
    "info",
    "helper",
    "sunset"
  ],
  "engines": {
    "node": ">= 12"
  },
  "nyc": {
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ],
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "yarn run clean && yarn run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "yarn run clean && yarn run gardener && yarn run test-simple",
    "docker": "docker run --net host -u`id -u`:`id -g` -v $(pwd):/user/project -v ~/.aws:/user/.aws -v ~/.npmrc:/user/.npmrc -w /user/project -it --entrypoint /bin/bash",
    "u": "yarn upgrade --latest --force",
    "i": "yarn install --frozen-lockfile",
    "t": "yarn test",
    "ts": "yarn run test-simple",
    "tsv": "yarn run test-simple --verbose",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "yarn run build-clean && npx semantic-release",
    "gardener": "node gardener",
    "it": "yarn run i && yarn run t"
  },
  "homepage": "https://github.com/blackflux/apollo-server-tools#readme",
  "bugs": {
    "url": "https://github.com/blackflux/apollo-server-tools/issues"
  },
  "peerDependencies": {
    "graphql": "^14.5.3"
  },
  "dependencies": {
    "apollo-server-errors": "2.4.2",
    "joi-strict": "1.2.9",
    "json-stable-stringify": "1.0.1",
    "lodash.get": "4.4.2",
    "lodash.set": "4.3.2",
    "object-scan": "13.9.3",
    "painless-version": "1.2.7",
    "smart-fs": "1.12.5"
  }
}
