{
  "name": "apollo-server-tools",
  "version": "0.0.0-development",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/apollo-server-tools.git"
  },
  "author": "Lukas Siemon",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.5",
    "@babel/register": "7.15.3",
    "@blackflux/eslint-plugin-rules": "2.0.4",
    "@blackflux/robo-config-plugin": "5.3.3",
    "@graphql-tools/schema": "7.1.5",
    "apollo-server": "2.25.2",
    "babel-eslint": "10.1.0",
    "babel-preset-latest-node": "5.5.1",
    "chai": "4.3.4",
    "coveralls": "3.1.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-markdown": "2.2.1",
    "eslint-plugin-mocha": "9.0.0",
    "graphql": "15.6.0",
    "js-gardener": "3.0.3",
    "node-tdd": "3.0.6",
    "nyc": "15.1.0",
    "request": "2.88.2",
    "request-promise": "4.2.6",
    "semantic-release": "18.0.0"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/apollo-server-tools/blob/master/LICENSE"
    }
  ],
  "description": "Helper for apollo-server",
  "keywords": [
    "graphql",
    "apollo",
    "apollo-server",
    "deprecation",
    "extract",
    "info",
    "helper",
    "sunset"
  ],
  "engines": {
    "node": ">= 12"
  },
  "nyc": {
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ],
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "yarn run clean && yarn run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "yarn run clean && yarn run gardener && yarn run test-simple",
    "docker": "docker run --net host -u`id -u`:`id -g` -v $(pwd):/user/project -v ~/.aws:/user/.aws -v ~/.npmrc:/user/.npmrc -w /user/project -it --entrypoint /bin/bash",
    "u": "yarn upgrade --latest --force",
    "i": "yarn install --frozen-lockfile",
    "t": "yarn test",
    "ts": "yarn run test-simple",
    "tsv": "yarn run test-simple --verbose",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "yarn run build-clean && npx semantic-release",
    "gardener": "node gardener",
    "it": "yarn run i && yarn run t"
  },
  "homepage": "https://github.com/blackflux/apollo-server-tools#readme",
  "bugs": {
    "url": "https://github.com/blackflux/apollo-server-tools/issues"
  },
  "peerDependencies": {
    "graphql": "^14.5.3"
  },
  "dependencies": {
    "apollo-server-errors": "3.1.0",
    "joi-strict": "2.0.1",
    "json-stable-stringify": "1.0.1",
    "lodash.get": "4.4.2",
    "lodash.set": "4.3.2",
    "object-scan": "17.1.0",
    "painless-version": "2.0.1",
    "smart-fs": "2.0.3"
  }
}
